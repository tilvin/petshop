.container
  .row
    =render "shared/left_column"
    .col-lg-9

      .discount_ind
        - @discounts.each do |discount|
          .discount_block
            .row
              .col-lg-7
                .disc_name
                  = link_to discount.name, discount
                .disc_ann
                  = discount.annotation
              .col-lg-2
                = link_to (image_tag discount.picture.discount_ind), discount
