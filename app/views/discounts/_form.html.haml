= form_for @discount do |f|
  - if @discount.errors.any?
    #error_explanation
      %h2= "#{pluralize(@discount.errors.count, "error")} prohibited this discount from being saved:"
      %ul
        - @discount.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :description
    = f.text_field :description
  .field
    = f.label :value
    = f.number_field :value
  .field
    = f.label :picture
    = f.text_field :picture
  .field
    = f.label :start
    = f.date_field :start
  .field
    = f.label :end
    = f.date_field :end
  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :brand
    = f.number_field :brand 

  .actions
    = f.submit 'Save'
