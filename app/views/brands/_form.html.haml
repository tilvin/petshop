= form_for @brand do |f|
  - if @brand.errors.any?
    #error_explanation
      %h2= "#{pluralize(@brand.errors.count, "error")} prohibited this brand from being saved:"
      %ul
        - @brand.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :picture
    = f.text_field :picture
  .field
    = f.label :description
    = f.text_area :description
  .field
    = f.label :country
    = f.text_field :country
  .actions
    = f.submit 'Save'
